<script type="text/ng-template" id="detailprov.html">
      <form name="myForm">
        <div class="control-group" ng-class="{error: myForm.nombre.$invalid}">
            <label class="control-label">Nombre</label>
            <input class="form-control" type="text" name="nombre" ng-model="project.nombre" required>
            <span ng-show="myForm.nombre.$error.required" class="text-danger">Requerido</span>
        </div>

        <div class="control-group" ng-class="{error: myForm.direccion.$invalid}">
            <label class="control-label">Dirección</label>
            <input class="form-control" type="text" name="direccion" ng-model="project.direccion" required>
            <span ng-show="myForm.direccion.$error.required" class="text-danger">Requerido</span>
        </div>
        
        <div class="control-group" ng-class="{error: myForm.telefono.$invalid}">
            <label class="control-label">Teléfono</label>
            <input class="form-control" type="text" name="telefono" ng-model="project.telefono" required>
            <span ng-show="myForm.telefono.$error.required" class="text-danger">Requerido</span>
        </div>
      
        <br>
        <a href="#/proveedores" class="btn btn-warning">Cancelar</a>
        <button ng-click="save()" ng-disabled="isClean() || myForm.$invalid"
                class="btn btn-primary">Guardar</button>
        <button ng-click="destroy()"
                ng-show="project.id" class="btn btn-danger">Borrar</button>
      </form>
    </script>