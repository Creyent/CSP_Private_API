<script type="text/ng-template" id="detailcat.html">
    <form class="form-horizontal" role="form" name="myForm">
        <div class="control-group" ng-class="{error: myForm.nombre.$invalid}">
            <label class="control-label">Nombre</label>
            <input class="form-control" type="text" name="nombre" ng-model="project.nombre" required>
            <span ng-show="myForm.nombre.$error.required" class="text-danger">Requerido</span>
        </div>
      
        <label class="control-label">Descripcion</label>
        <textarea class="form-control" name="descripcion" ng-model="project.descripcion"></textarea>
      
        <br>
        <a href="#/categorias" class="btn btn-warning">Cancelar</a>
        <button ng-click="save()" ng-disabled="isClean() || myForm.$invalid"
                class="btn btn-primary">Guardar</button>
        <button ng-click="destroy()"
                ng-show="project.id" class="btn btn-danger">Borrar</button>
    </form>
</script>